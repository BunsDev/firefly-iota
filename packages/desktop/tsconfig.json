{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "isolatedModules": false,
        "allowJs": true,
        "lib": ["DOM", "ESNext"],
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["../shared/lib/*"],
            "@routes/*": ["../shared/routes/*"]
        }
    },
    "include": ["./lib/**/*.ts", "../shared/lib/**/*.ts"]
}
